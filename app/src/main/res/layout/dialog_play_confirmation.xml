<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/playConfirmationLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp">

	<TextView
        android:id="@+id/playConfirmationTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:layout_margin="10dp"
		android:text="@string/textView_play_confirmation"
        android:textColor="#FFFFFF"/>

    <CheckBox
        android:id="@+id/playConfirmationCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkBox_play_confirmation" />

</LinearLayout>
