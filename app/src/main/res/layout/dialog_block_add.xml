<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/blockAddLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/textView_blockAdd_message"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_rowLength"/>

		<EditText
			android:id="@+id/blockAddRowLength"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="number"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_bpm"/>

		<EditText
			android:id="@+id/blockAddBpm"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"/>
	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/blockAddDelayLeft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:text="@string/common_delay"/>

		<EditText
			android:id="@+id/blockAddDelay"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toEndOf="@+id/blockAddDelayLeft"
			android:layout_toLeftOf="@+id/blockAddDelayRight"
			android:layout_toRightOf="@+id/blockAddDelayLeft"
			android:layout_toStartOf="@+id/blockAddDelayRight"
			android:inputType="numberDecimal|numberSigned"/>

		<TextView
			android:id="@+id/blockAddDelayRight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:text="@string/common_ms"/>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_beat"/>

		<EditText
			android:id="@+id/blockAddBeat"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="number"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_split"/>

		<EditText
			android:id="@+id/blockAddSplit"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="number"/>
	</LinearLayout>

</LinearLayout>