<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/blockSettingLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="10dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_bpm"/>

		<TextView
			android:id="@+id/blockSettingBpmFrom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#00FF00"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_to"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>

		<EditText
			android:id="@+id/blockSettingBpmTo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>
	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/blockSettingDelayLeft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_centerVertical="true"
			android:text="@string/common_delay"/>

		<TextView
			android:id="@+id/blockSettingDelayFrom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/blockSettingDelayLeft"
			android:layout_toEndOf="@+id/blockSettingDelayLeft"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#00FF00"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>

		<TextView
			android:id="@+id/blockSettingDelayArrow"
			android:text="@string/common_to"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/blockSettingDelayFrom"
			android:layout_toEndOf="@+id/blockSettingDelayFrom"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>

		<EditText
			android:id="@+id/blockSettingDelayTo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/blockSettingDelayArrow"
			android:layout_toEndOf="@+id/blockSettingDelayArrow"
			android:layout_toLeftOf="@+id/blockSettingDelayRight"
			android:layout_toStartOf="@+id/blockSettingDelayRight"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"
			android:inputType="numberDecimal|numberSigned"/>

		<TextView
			android:id="@+id/blockSettingDelayRight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:text="@string/common_ms"/>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_beat"/>

		<TextView
			android:id="@+id/blockSettingBeatFrom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#00FF00"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_to"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>

		<EditText
			android:id="@+id/blockSettingBeatTo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_split"/>

		<TextView
			android:id="@+id/blockSettingSplitFrom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="#00FF00"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/common_to"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>

		<EditText
			android:id="@+id/blockSettingSplitTo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"/>
	</LinearLayout>

</LinearLayout>